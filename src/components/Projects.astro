---
const projects = [
  {
    title: "The Glass Menagerie",
    role: "Tom Wingfield",
    type: "Theater",
    year: "2025",
    link: "#",
  },
  {
    title: "Short Film: Echoes",
    role: "Lead",
    type: "Film",
    year: "2024",
    link: "#",
  },
  {
    title: "A Midsummer Night's Dream",
    role: "Puck",
    type: "Theater",
    year: "2024",
    link: "#",
  },
  {
    title: "Web Series: Unscripted",
    role: "Recurring Guest",
    type: "Digital",
    year: "2023",
    link: "#",
  },
  {
    title: "Voice: Starbound Adventures",
    role: "Kai (Lead)",
    type: "Voice Over",
    year: "2023",
    link: "#",
  },
];
---

<section class="projects section" id="projects">
  <div class="container">
    <div class="projects-header reveal">
      <span class="section-label">Projects</span>
      <h2>Selected<br /><em>credits</em></h2>
    </div>

    <div class="projects-list">
      {projects.map((project, i) => (
        <a
          href={project.link}
          class={`project-row reveal reveal-delay-${Math.min(i + 1, 4)}`}
          target={project.link.startsWith('http') ? '_blank' : undefined}
          rel={project.link.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          <span class="project-index">0{i + 1}</span>
          <div class="project-main">
            <h3 class="project-title">{project.title}</h3>
            <span class="project-role">{project.role}</span>
          </div>
          <span class="project-type">{project.type}</span>
          <span class="project-year">{project.year}</span>
          <svg class="project-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
            <path d="M5 15L15 5M15 5H7M15 5v8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      ))}
    </div>
  </div>

  <div class="section-line"></div>
</section>

<style>
  .projects {
    background: var(--bg);
  }

  .projects-header {
    margin-bottom: var(--space-lg);
  }

  .projects-header h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.05;
  }

  .projects-header em {
    color: var(--accent);
    font-style: italic;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    border-top: 1px solid var(--border);
  }

  .project-row {
    display: grid;
    grid-template-columns: 40px 1fr 120px 60px 24px;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border);
    color: var(--text);
    text-decoration: none;
    transition: all var(--duration) var(--ease);
  }

  .project-row:hover {
    color: var(--accent);
    padding-left: var(--space-sm);
  }

  .project-index {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 0.9rem;
    color: var(--text-light);
    transition: color var(--duration) var(--ease);
  }

  .project-row:hover .project-index {
    color: var(--accent);
  }

  .project-main {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .project-title {
    font-family: var(--font-body);
    font-size: 1.05rem;
    font-weight: 500;
    color: inherit;
    transition: color var(--duration) var(--ease);
  }

  .project-role {
    font-size: 0.85rem;
    color: var(--warm-gray);
  }

  .project-type {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--warm-gray);
    text-align: right;
  }

  .project-year {
    font-size: 0.85rem;
    color: var(--text-light);
    font-variant-numeric: tabular-nums;
    text-align: right;
  }

  .project-arrow {
    color: var(--text-light);
    transition: all var(--duration) var(--ease);
    opacity: 0;
    transform: translateX(-4px);
  }

  .project-row:hover .project-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--accent);
  }

  .section-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  @media (max-width: 768px) {
    .project-row {
      grid-template-columns: 1fr auto;
      gap: var(--space-xs);
    }

    .project-index,
    .project-type,
    .project-arrow {
      display: none;
    }

    .project-year {
      align-self: start;
      margin-top: 2px;
    }
  }
</style>
