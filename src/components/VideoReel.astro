---
const reel = {
  title: "Acting Reel 2025",
  description: "A compilation of recent film, theater, and voice work showcasing range and versatility.",
  embedUrl: "", /* Replace with YouTube/Vimeo embed URL */
};
---

<section class="video-reel section" id="video-reel">
  <div class="container">
    <div class="reel-header reveal">
      <span class="section-label">Video Reel</span>
      <h2>See the<br /><em>work</em></h2>
    </div>

    <div class="reel-content reveal reveal-delay-1">
      <div class="reel-player">
        {reel.embedUrl ? (
          <iframe
            src={reel.embedUrl}
            title={reel.title}
            allowfullscreen
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          ></iframe>
        ) : (
          <div class="reel-placeholder">
            <div class="placeholder-icon">
              <svg width="56" height="56" viewBox="0 0 56 56" fill="none" aria-hidden="true">
                <circle cx="28" cy="28" r="27" stroke="currentColor" stroke-width="1"/>
                <polygon points="22,18 22,38 40,28" fill="currentColor"/>
              </svg>
            </div>
            <p class="placeholder-text">Video reel coming soon</p>
          </div>
        )}
      </div>

      <div class="reel-info">
        <h3>{reel.title}</h3>
        <p>{reel.description}</p>
      </div>
    </div>
  </div>

  <div class="section-line"></div>
</section>

<style>
  .video-reel {
    background: var(--bg-alt);
  }

  .reel-header {
    margin-bottom: var(--space-lg);
  }

  .reel-header h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.05;
  }

  .reel-header em {
    color: var(--accent);
    font-style: italic;
  }

  .reel-content {
    max-width: 900px;
  }

  .reel-player {
    aspect-ratio: 16 / 9;
    background: var(--bg-card);
    border: 1px solid var(--border);
    overflow: hidden;
    margin-bottom: var(--space-md);
  }

  .reel-player iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .reel-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
  }

  .placeholder-icon {
    color: var(--accent);
    opacity: 0.4;
    transition: opacity 0.5s var(--ease);
  }

  .reel-placeholder:hover .placeholder-icon {
    opacity: 0.7;
  }

  .placeholder-text {
    font-size: 0.85rem;
    color: var(--text-light);
    letter-spacing: 0.05em;
  }

  .reel-info h3 {
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 1.1rem;
    margin-bottom: var(--space-xs);
  }

  .reel-info p {
    color: var(--warm-gray);
    font-size: 0.95rem;
    line-height: 1.7;
    font-weight: 300;
  }

  .section-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }
</style>
