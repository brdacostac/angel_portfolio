---
const demos = [
  { title: "Character Demo", duration: "2:34", description: "Animation and video game character voices" },
  { title: "Commercial Demo", duration: "1:48", description: "Conversational reads for brand campaigns" },
  { title: "Narration Demo", duration: "3:12", description: "Audiobook and documentary narration" },
];
---

<section class="voice section" id="voice-reel">
  <div class="container">
    <div class="voice-header reveal">
      <span class="section-label">Voice Reel</span>
      <h2>Hear the<br /><em>performance</em></h2>
    </div>

    <div class="voice-player reveal reveal-delay-1">
      <div class="player-visual">
        <div class="waveform">
          {Array.from({ length: 48 }).map((_, i) => {
            const h = 15 + Math.sin(i * 0.4) * 25 + Math.cos(i * 0.7) * 15 + Math.random() * 10;
            return <div class="wave-bar" style={`height: ${h}%`} />;
          })}
        </div>
        <p class="player-hint">Audio demos coming soon</p>
      </div>

      <div class="demo-list">
        {demos.map((demo, i) => (
          <div class={`demo-item reveal reveal-delay-${i + 1}`}>
            <div class="demo-play">
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <polygon points="3,1 3,15 14,8" fill="currentColor"/>
              </svg>
            </div>
            <div class="demo-info">
              <span class="demo-title">{demo.title}</span>
              <span class="demo-desc">{demo.description}</span>
            </div>
            <span class="demo-duration">{demo.duration}</span>
          </div>
        ))}
      </div>
    </div>
  </div>

  <div class="section-line"></div>
</section>

<style>
  .voice {
    background: var(--bg-alt);
  }

  .voice-header {
    margin-bottom: var(--space-lg);
  }

  .voice-header h2 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.05;
  }

  .voice-header em {
    color: var(--accent);
    font-style: italic;
  }

  .voice-player {
    max-width: 800px;
  }

  .player-visual {
    background: var(--bg-card);
    border: 1px solid var(--border);
    padding: var(--space-lg) var(--space-md);
    margin-bottom: var(--space-md);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .waveform {
    display: flex;
    align-items: center;
    gap: 3px;
    height: 80px;
    width: 100%;
    justify-content: center;
  }

  .wave-bar {
    width: 3px;
    background: var(--accent);
    opacity: 0.4;
    border-radius: 2px;
    transition: opacity 0.3s var(--ease);
    animation: wavePulse 3s ease-in-out infinite;
  }

  .wave-bar:nth-child(odd) {
    animation-delay: 0.1s;
  }

  .wave-bar:nth-child(3n) {
    animation-delay: 0.3s;
  }

  @keyframes wavePulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .player-hint {
    font-size: 0.8rem;
    color: var(--text-light);
    letter-spacing: 0.05em;
  }

  .demo-list {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: var(--border);
    border: 1px solid var(--border);
  }

  .demo-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    background: var(--bg-card);
    cursor: pointer;
    transition: background var(--duration) var(--ease);
  }

  .demo-item:hover {
    background: var(--bg-alt);
  }

  .demo-play {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--border);
    color: var(--accent);
    flex-shrink: 0;
    transition: all var(--duration) var(--ease);
  }

  .demo-item:hover .demo-play {
    border-color: var(--accent);
    background: var(--terracotta-dim);
  }

  .demo-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex: 1;
    min-width: 0;
  }

  .demo-title {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--text);
  }

  .demo-desc {
    font-size: 0.8rem;
    color: var(--warm-gray);
  }

  .demo-duration {
    font-size: 0.8rem;
    color: var(--text-light);
    font-variant-numeric: tabular-nums;
    flex-shrink: 0;
  }

  .section-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  @media (max-width: 480px) {
    .demo-desc {
      display: none;
    }
  }
</style>
